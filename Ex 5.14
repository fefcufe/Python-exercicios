nota1, nota2, nota3 = map(float, input('Digite suas três notas:').split())
mediaFinal = (nota1 * 2 + nota2 * 3 + nota3 * 5)/10
if 0 <= mediaFinal <= 2.9:
    print(f'Sua nota final é {mediaFinal} e você está reprovado.')
elif 3 <= mediaFinal <= 4.9:
    print(f'Sua nota final é {mediaFinal} e você está em recuperação.')
elif nota1 < 0 or nota2 < 0 or nota3 < 0 or nota1 > 10 or nota2 > 10 or nota3 > 10:
    print(f'Notas inválidas.')
else:
    print(f'Sua nota final é {mediaFinal} e você está aprovado.')
